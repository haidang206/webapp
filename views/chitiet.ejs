                    <!-- Go to www.addthis.com/dashboard to customize your tools --> <div class="addthis_inline_share_toolbox"></div>
                    <form action="/upcmt">
                        <div class="form-group">
                            <input type="" class="form-control" name="title" placeholder="Viết bình luận ...">
                          </div>
                    </form>
                </section>
                <% }})%> 
                <section class="con" >
                            <div class="row">
                                <div class="col-12">
                                    <div class="card-deck" style="float: left;">
                                    <% data.forEach(function(motsanpham){ %>
                                        <% if(motsanpham._id != idsanpham && motsanpham.tag == "Thể thao") {%>
                                        <div class="haha">
                                            <a href="/chitiet.<%= motsanpham._id %>"><img class="card-img-top" src="<%= motsanpham.anh[0] %>" alt=""></a> 
                                            <div class="card-body">
                                                <h4 class="card-title"><%= motsanpham.title %></h4>
                                                <p class="card-text"><%= motsanpham.subtitle %></p>
                                            </div>
                                        </div>
                                     <% }})%>
                                    </div>
                                </div>
                            </div>
                            
                </section>
            </section>
           
