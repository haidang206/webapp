      <div class="wrapper" style="background: gray">
            <div class="header" >
                    <div class="menu">
                        <a href="/trangchu">Trang chủ</a>
                        <a href="/dangnhap">Đăng bài</a>
                  </div>
            </div>
            <section class="container clearfix" style="background: white">
                <section class="wrap clearfix">
                        <section class="sider_1 "> 
                            <% data.forEach(function(motsanpham){ %>
                                <% if(motsanpham._id == idsanpham) {%>
                                <article class="list_news">
                                        <h1 class="title_news_detail mb10">
                                            <%= motsanpham.title %>
                                        </h1>
                                        <h2 class="description">
                                            <%= motsanpham.subtitle %>
                                        </h2>
                                        <article class="content_detail ">
                                            <img  src="<%= motsanpham.anh[0] %>" data-width="500" data-pwidth="500">
                                            <p><%= motsanpham.content%></p>
                                        </article>
                                </article> 
                                <% 
                            }
                            })%> 
                            </section>               
                                
                        <!-- sider_1 -->
                        <section class="sider_2 ">
                                <% data.forEach(function(motsanpham){ %>
                                    <% if(motsanpham._id != idsanpham && motsanpham.tag == "Thời sự") {%>
                                        <article class="list_news">
                                            <h3 class="title_news">
                                                <a href="/chitiet.<%= motsanpham._id %>" title="Bộ Giao thông bổ sung nhiều tuyến cao tốc mới vào quy hoạch">
                                                <%= motsanpham.title %> </a>
                                            </h3>
                                            <div class="thumb_art">
                                                <a class="thumb thumb_5x3" href="/chitiet.<%= motsanpham._id %>" title="Bộ Giao thông bổ sung nhiều tuyến cao tốc mới vào quy hoạch">
                                                <img src="<%= motsanpham.anh[0] %>">
                                                </a>
                                            </div>
                                            <h4 class="description">
                                                <%= motsanpham.subtitle %>
                                            </h4>
                                        </article>                
                                <% }})%>        
                        </section>
                </section>
                <% data.forEach(function(motsanpham){ %>
                    <% if(motsanpham._id == idsanpham) {%>
                <section>
                    <!-- <input  id="btb" type="button" value="Đăng Nhập" onclick="RequestLoginFB()" style="display: block">
                    <p id="lbl" style="display: none;"></p> -->
                    <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
                    </fb:login-button>

                    <img  hinh="<%= idsanpham %>" id="like" src="https://cdn3.iconfinder.com/data/icons/black-easy/512/538774-like_512x512.png" alt="">
                    <a id="">Có </a> <a id="you" href=""><%= motsanpham.like %></a>
                    <img hinh="<%= idsanpham %>" id="comment" src="https://cdn0.iconfinder.com/data/icons/social-messaging-ui-color-shapes/128/chat-circle-blue-512.png" alt="">
